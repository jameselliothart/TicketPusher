@typeparam TItem

@if (Items != null)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>@TableHeader</tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr >@RowTemplate(item)</tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>loading...</em></p>
}