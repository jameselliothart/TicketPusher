
@inherits EditTicketBase

<EditForm Model="@EntityModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <label>
        Project:
        <CustomInputSelect id="project" @bind-Value="EntityModel.ProjectId"
            ValidationFor="@(() => EntityModel.ProjectId)">
            @foreach (var project in @Projects)
            {
                <option value="@project.Id">@project.Name</option>
            }
        </CustomInputSelect>
    </label>

    <label>
        Owner:
        <InputText id="owner" @bind-Value="EntityModel.Owner" readonly />
    </label>

    <label>
        Description:
        <InputTextArea id="description" @bind-Value="EntityModel.Description" />
    </label>

    <label>
        Due Date:
        <InputDate id="dueDate" @bind-Value="EntityModel.DueDate" />
    </label>

    <button type="submit">Add Ticket</button>
</EditForm>