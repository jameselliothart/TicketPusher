@page "/projects"

@using TicketPusher.Server.Utils
@inherits ProjectsBase
@attribute [Authorize]

<TableTemplate Items="Entities" Context="project">
    <TableHeader>
        <th><EditProject OnSubmitProject="RefreshData" Projects="Entities" /></th>
        <th>Id</th>
        <th>Name</th>
        <th>Hierarchy</th>
    </TableHeader>
    <RowTemplate>
            <MatIconButton>
                <i title="Edit" class="oi oi-pencil" ></i>
            </MatIconButton>
            <td title="@project.Id">@project.Id.ToShortGuid()</td>
            <td>@project.Name</td>
            <td>@project.Hierarchy</td>
    </RowTemplate>
</TableTemplate>
